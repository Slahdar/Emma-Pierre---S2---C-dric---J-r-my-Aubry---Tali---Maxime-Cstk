 {% include 'header.twig' %}

 <div id="page-container">

    <div class="row">
        <div class="col-4">

            <div class="row">
                <div class="col-12"> 
                <h4>Collections</h4>
                    <!-- Sélecteur Collection -->
                    <select name="collection">
                        <option value="tous">Tous</option>
                    {% for item in collections %}
                        <option value="{{ item.collection_id }}">{{ item.collection_name }}</option>
                    {% endfor %}
                    </select>
                </div>

                <div class="col-12"> 
                    <h4>Type de pierres</h4>
                    <!-- Sélecteur Gem Type -->
                    <select name="gem_type">
                        <option value="tous">Tous</option>
                    {% for item in gemTypes %}
                        <option value="{{ item.gem_id }}">{{ item.gem_name }}</option>
                    {% endfor %}
                    </select>
                </div>
                
                <div class="col-12">
                    <h4>Cétégories</h4>
                    <!-- Sélecteur Catégorie -->
                    <select name="category">
                        <option value="tous">Tous</option>
                    {% for item in categories %}
                        <option value="{{ item.category_id }}">{{ item.category_name }}</option>
                    {% endfor %}
                    </select>
                </div>
            </div>

        </div>
        <div class="col-8">
        produits
        </div>
    </div>

</div>

